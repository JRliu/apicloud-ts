{
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "spaceBeforeFunctionParen": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "src/**/*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "src/**/*.scss",
            "options": {
                "singleQuote": false,
                "semi": true,
                "quotes": [2, "single"]
            }
        }
    ]
}
