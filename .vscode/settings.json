{
    "[vue]": {
        "editor.formatOnSave": true
    },
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "typescript",
            "autoFix": true
        }
    ],
    "vetur.format.options.tabSize": 4,
    "vetur.format.defaultFormatter.html": "prettier",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}
